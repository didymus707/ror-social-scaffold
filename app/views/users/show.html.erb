<section class="user-section">
  <h2><%= @user.name %>
    <%= not_user_n_friends_with(@user, user_path(@user), user_friendships_path(@user), 'See Profile', 'Add Friend') %>
  </h2>
  <article class="timeline">
    <h3>Recent posts:</h3>
    <ul class="posts">
      <%= render @posts %>
    </ul>
  </article>
</section>
