<section class="users-section">
  <ul class="users-list">
    <% @users.each do |user| %>
      <% unless user.name == current_user.name %>
        <li>
          Name: <%= user.name %>
          <span class="profile-link">
            <%= link_to 'See Profile',  user_path(user), class: 'profile-link' %>
            <%= link_to 'Add Friend', friendships_path(friend_id: user), method: 'post' %>
          </span>
        </li>
      <% end %>
    <% end %>
  </ul>
</section>
